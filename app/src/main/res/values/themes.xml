<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCounterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
<!--     style button-->
    <style name="ButtonStyle">
        <item name="android:color">#2B3467</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
<!--     style radio button-->
    <style name="RadioButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="minHeight">48dp</item>
        <item name="buttonTint">@color/navy_blue</item>
    </style>
<!--    styling textview-->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
<!--    switch-->
    <style name="SwitchStyle">
        <item name="android:thumbTint">@drawable/switch_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navy_blue</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:trackTint">@drawable/track_switch_color</item>
    </style>
</resources>